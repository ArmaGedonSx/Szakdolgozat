<Window x:Class="Chat_Client.Init"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Client"
        mc:Ignorable="d"
        Title="Chat - Init" Height="150" Width="150"
        Background="#333333"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="true"
        Closed="Window_Closed"
        MouseDown="_MouseDown"
        Loaded="Window_Loaded"
        Icon="Images/Client.ico">
    <Grid >

        <Label Name="text" Content="Loading." Foreground="#CCCC99" HorizontalAlignment="Center" Margin="10,113,10,5" VerticalAlignment="Center" Height="32" Width="130" HorizontalContentAlignment="Center"/>
        <Image Name="Logo" HorizontalAlignment="Left" Height="98" Margin="34,10,0,0" VerticalAlignment="Top" Width="90" Source="Images/Client.png">
            <Image.BitmapEffect >
                <BlurBitmapEffect  Radius="0" />
            </Image.BitmapEffect>
        </Image>
    </Grid>
</Window>
